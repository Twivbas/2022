/* 水平间距 */
.ask-container {
  padding: 20rpx;
  margin: 10rpx 20rpx;
  border: 1px solid #55aaff;
  border-radius: 8px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  background-color: #eee;
}
.ask-container .ask-text {
  color: #55aaff;
}
.ask-container .ask {
  background-color: blue;
  color: #fff;
  font-size: 28rpx;
  width: 100rpx;
  padding: 10rpx;
  border-radius: 15rpx;
  text-align: center;
}
.questions-container .list {
  min-height: 100rpx;
  margin: 10rpx 8rpx;
  padding: 18rpx 20rpx;
  box-shadow: 0px 5px 5px #eee;
  background-color: #fff;
}
.questions-container .list .reply {
  background-color: blue;
  color: #fff;
  font-size: 28rpx;
  width: 100rpx;
  padding: 10rpx;
  border-radius: 45%;
  text-align: center;
  position: relative;
  left: 80%;
  margin-top: 10rpx;
}

