<view><view class="header"><view class="title">{{question.title}}</view><view class="desc"><rich-text nodes="{{question.desc}}"></rich-text></view><button class="reply" type="default" size="mini" plain="{{true}}" data-event-opts="{{[['tap',[['writeAnswer',['$0'],['question.question_id']]]]]}}" bindtap="__e">写回答</button></view><view class="middle"><view class="numbers">{{"回答"+question.answers.length}}</view><view data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" class="switch" bindtap="__e"><image class="icon" src="../../static/icons/qiehuan.png"></image><view class="new">{{isSortByNew?'最新':'热门'}}</view></view></view><view class="answers"><block wx:for="{{$root.l0}}" wx:for-item="item" wx:for-index="__i0__" wx:key="_id"><view data-event-opts="{{[['tap',[['seeAnswer',['$0','$1'],['question_id',[['answers','_id',item.$orig._id,'answer_id']]]]]]]}}" class="list" bindtap="__e"><view class="author"><image class="avatar" src="{{item.$orig.avatarUrl}}"></image><view class="nickName">{{item.$orig.nickName}}</view></view><view class="answer"><rich-text nodes="{{item.$orig.answer}}"></rich-text></view><view class="bottom"><text class="like">{{item.$orig.likes+'赞同 ·'}}</text><text class="answerTime">{{item.f0}}</text></view></view></block></view></view>