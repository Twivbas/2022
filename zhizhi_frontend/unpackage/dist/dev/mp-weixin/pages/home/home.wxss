/* 水平间距 */
.header {
  display: flex;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 999;
}
.header .title {
  width: 50%;
  height: 50rpx;
  text-align: center;
  background-color: #FFF;
  padding: 20rpx 0;
}
.container {
  display: flex;
  height: 100vh;
}
.container .recommendation {
  width: 100%;
  height: calc(100vh - 100rpx);
}
.container .recommendation .scroll-Y {
  height: 100vh;
}
.container .recommendation .list {
  margin: 10rpx 8rpx;
  padding: 18rpx 20rpx;
  box-shadow: 0px 5px 5px #eee;
  background-color: #FFF;
}
.container .recommendation .list .question {
  padding-bottom: 10rpx;
}
.container .recommendation .list .answer {
  font-size: 14px;
  min-height: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.container .hotList {
  width: 100%;
  background-color: #FFF;
  margin-top: 10rpx;
}
.container .hotList .scroll-Y {
  height: 510px;
}
.container .hotList .list {
  padding: 18rpx;
}

